<%= form_for(ticket) do |f| %>
  <% if admin? %>
    <%= f.select :priority, options_for_select(priority, selected: (ticket.priority)), {}, { class: "form-control priority-dropdown col-md-3" } %>
  <% end %>

  <div class='actions'>
    <%= f.submit 'Update', class: "btn btn-success" %>
  </div>
<% end %>
