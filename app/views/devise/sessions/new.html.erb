<main class="login-form devise-page">
  <div class="cotainer">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">Log in</div>
            <div class="card-body">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group row">
                  <%= f.label :email, class: 'col-md-4 col-form-label text-md-right' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-md-6' %>
                </div>

                <div class="form-group row">
                  <%= f.label :password, class: 'col-md-4 col-form-label text-md-right' %><br />
                  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-md-6' %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-group row">
                    <div class="col-md-6 offset-md-4">
                      <%= f.check_box :remember_me, class: '' %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                <% end %>

                <div class="actions form-group row">
                  <div class='offset-md-6'>
                    <%= f.submit "Log in", class: 'btn btn-primary' %>
                  </div>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
