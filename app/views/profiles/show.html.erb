<div class="container bootstrap snippet">
  <div class="row">
    <div class="col-sm-12 pull-center"><h1><%= @user.name.capitalize %></h1></div>
  </div>
  <div class="row">
    <div class="col-sm-3"><!--left col-->


    <div class="text-center">
      <%= image_tag 'default-picture.png', alt: "Avatar", class: "avatar img-circle img-thumbnail" %>
      <h6>Upload a different photo...</h6>
      <input type="file" class="text-center center-block file-upload">
    </div><br>

    </div><!--/col-3-->
      <div class="col-sm-9">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <hr>
            <div class="form-group profile">
              <div class="col-xs-6">
                <div class='user-type'><%= user_type(@user) %></div>
              </div>
            </div>
            <%= render 'activity' %>
            <hr>
        </div>

      </div>
  </div>
</div>
